<div class="publication-entry bg-gray-50 p-4 mb-4 rounded-2xl shadow-sm border border-gray-200 hover:shadow-md transition">

  {% if entry.abbr %}
  <span class="inline-block bg-indigo-600 text-white text-xs font-semibold px-2 py-1 rounded-lg mb-2">
    {{ entry.abbr }}
  </span>
  {% endif %}

{% if entry.abbr %}
  <span class="abbr">{{ entry.abbr }}</span>
{% endif %}

{% if entry.altmetric %}
  <span class="altmetric">Altmetric Badge</span>
{% endif %}

  <p class="text-gray-800 leading-relaxed">
    {{ reference }}
  </p>

  {% if entry.doi %}
  <a href="https://doi.org/{{ entry.doi }}" class="inline-block bg-purple-500 text-white text-sm px-3 py-1 rounded-md mt-2 hover:bg-purple-600 transition">
    DOI
  </a>
  {% endif %}

  {% if entry.pdf %}
  <a href="{{ entry.pdf }}" class="inline-block bg-blue-500 text-white text-sm px-3 py-1 rounded-md mt-2 hover:bg-blue-600 transition">
    PDF
  </a>
  {% endif %}

  {% if site.enable_publication_badges.dimensions and entry.doi %}
  <span class="__dimensions_badge_embed__ ml-2" data-doi="{{ entry.doi }}" data-hide-zero-citations="true" data-style="small_rectangle"></span>
  {% endif %}

</div>
